{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "program": "${workspaceRoot}/src/lib/index.ts",
      "outFiles": ["${workspaceRoot}/.ts-debug/**"],
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "tsc:debug:build",
      "postDebugTask": "tsc:debug:clean",
      "console": "integratedTerminal"
    },
    {
      "name": "Run mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/mocha",
      "stopOnEntry": false,
      "args": ["${workspaceRoot}/.ts-test/test/setup.spec.js", "${workspaceRoot}/.ts-test/test/**/*.spec.js"],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "tsc:test:build",
      "postDebugTask": "tsc:test:clean"
    }
  ]
}
