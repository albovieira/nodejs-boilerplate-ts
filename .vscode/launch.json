{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "program": "${workspaceRoot}/src/lib/index.ts",
      "outFiles": ["${workspaceRoot}/.ts-debug/**"],
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "tsc:debug:build",
      "postDebugTask": "tsc:debug:clean",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "Run Mocha",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/.ts-test/test/setup.spec.js",
        "${workspaceRoot}/.ts-test/test/**/*.spec.js",
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "preLaunchTask": "tsc:test:build",
      "postDebugTask": "tsc:test:clean"
    },
  ]
}
